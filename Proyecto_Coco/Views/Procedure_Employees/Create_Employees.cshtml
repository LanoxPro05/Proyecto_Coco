
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="https://kit.fontawesome.com/74b80dc0de.js" crossorigin="anonymous"></script>
    <title>Crear nuevo empleado</title>
</head>
<body>
    <style>
        body {
            background-color: cadetblue;
        }
        h2{
            position:relative;
            top:10px;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        .CreateEmployee{
            position:relative;
            left:55px;
        }
        .form{
            position:relative;
            left:400px;
            bottom:15px;
        }
        .Img {
            position: relative;
            left: 580px;
            top: 10px;
        }
        .Regresar{
            position:relative;
            bottom:190px;
            left:20px;
        }
    </style>
    <h2 class="text-center">Agregar nuevo empleado</h2>
    <div class="Img">
        <img src="~/Content/Img/empleados.png" width="150" />
    </div>
    <div class="Regresar">
        <button class="btn btn-warning">Regresar</button>
    </div>
    <div class="form">
        <div class="container">
            <div class="container-fluid">
                <form action="" method="post">
                    <label>Apellido: <input type="text" class="form-control" name="" id="" /></label>
                    <br />
                    <br />
                    <label>Nombre: <input type="text" class="form-control" name="" id="" /></label>
                    <br />
                    <br />
                    <label>Telefono: <input type="text" class="form-control" name="" id="" /></label>
                    <br />
                    <br />
                    <label>Cargo: <input type="text" class="form-control" name="" id="" /></label>
                    <br />
                    <br />
                    <div class="CreateEmployee">
                        <button type="submit" class="btn btn-primary">Agregar nuevo empleado</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
